{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
